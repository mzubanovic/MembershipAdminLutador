@using System.Configuration
@model Users
@{
    Layout = "_LoginLayout.cshtml";
        //ViewBag.Title = "User registration";
 }

<div class="container-fluid">

   
    <!-- .row -->
    <div class="row">

        <div class="col-md-12 col-xs-12">
            <div class="white-box">
                <form class="form-horizontal form-material" action="@Url.Action("RegisterUser","Home")" method="POST">
                    <input type="hidden" name="_register" value="yes"/>
                    <div class="form-group">
                        <label class="col-md-12">Ime</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="Ime" class="form-control form-control-line" name="ime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Prezime</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="Prezime" class="form-control form-control-line" name="prezime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            <input type="email" placeholder="Email" class="form-control form-control-line" name="email" id="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Tel</label>
                        <div class="col-md-12">
                            <input type="number" placeholder="tel" class="form-control form-control-line" name="tel">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Password</label>
                        <div class="col-md-12">
                            <input type="password" value="" class="form-control form-control-line" name="pass">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Ponovi password</label>
                        <div class="col-md-12">
                            <input type="password" value="" class="form-control form-control-line" name="passchecked">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
    <!-- /.row -->


</div>

